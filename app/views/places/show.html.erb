<div class="container_show">
  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
  <div class="info_place">
    <h1 class="header-activity__<%= @activity %>">
      <%=  %>
      <%= @place.name %></h1>
    <p><%= @place.address %> </p>
    <p><%= @place.accessibility %> </p>
    <p> <%= @place.schedules %> </p>
  </div>
</div>

<div id="reviews" style="margin: 0 auto; width: 600px; background: white; ">
  <%= render 'reviews/form', place: @place, review: @review %>

  <% if @place.reviews.blank? %>
    Be the first to leave a review for <%= @place.name %>
  <% else %>
    <div class="reviews-container">
    <% @place.reviews.order(created_at: :desc).each do |review| %>
      <%= render 'reviews/show', review: review %>
    <% end %>
    </div>
  <% end %>
</div>
