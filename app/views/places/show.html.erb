<div class="container_show">
  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
  <div class="info_place">
    <h1><%= @place.name %></h1>
    <p><%= @place.address %> </p>
    <p><%= @place.accessibility %> </p>
    <p><%= @place.schedules %> </p>
  </div>
</div>

