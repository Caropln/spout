function refreshForm(innerHTML) {
  const avisContainer = document.getElementById('avis-container');
  avisContainer.innerHTML = innerHTML;
}

function addReview(reviewHTML) {
  const reviews = document.getElementById('reviews');
  reviews.insertAdjacentHTML('beforebegin', reviewHTML);
}

<% if @review.errors.any? %>
  refreshForm('<%= j render "reviews/form", place: @place, review: @review %>');
<% else %>
  addReview('<%= j render "reviews/show", review: @review %>');
  refreshForm('<%= j render "reviews/showvalidate", place: @place, review: Review.new %>');
<% end %>
