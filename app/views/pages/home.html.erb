<div
  id="map"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  data-markers="<%= @markers.to_json %>" class="map_homepage">
</div>
<div class="text_homepage">
  <h1> Découvrez les meilleurs spots de Volley en extérieur </h1>
    <%= form_tag places_path, method: :get do %>
      <div class="form-row address_form height-max white-form" id="geocoder">
        <div class="col-7">
          <%= text_field_tag :address, params[:address], class: "form-control perso-form form-no-border", placeholder: "Enter your address", id: "place_address" %>
        </div>
        <div class="col-3">
          <select class="form-control form-no-border" id="sel1" <%= text_field_tag :radius, params[:radius]%>>
            <option value="1">+/- 1 km</option>
            <option value="2">+/- 2 km</option>
            <option value="3">+/- 3 km </option>
            <option value="4">+/- 4 km</option>
            <option value="5">+/- 5 km</option>
          </select>
        </div>
        <div class="col-2">
          <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i> Search
          </button>
        </div>
      </div>
    </div>
  <%= render "sport"  %>
  <% end %>
</div>
